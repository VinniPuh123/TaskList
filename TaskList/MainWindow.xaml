<Window x:Class="TaskList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskList"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="Add" Content="Add" Margin="0,0,10,10" HorizontalAlignment="Right" Width="90" Height="49" VerticalAlignment="Bottom" Click="Add_Click"/>
        <TextBox x:Name="NewItemText" Margin="0,0,210,10" TextWrapping="Wrap" Text="" Height="49" VerticalAlignment="Bottom"/>
        <ListBox x:Name="TasksBox" Margin="0,0,0,70"/>
        <Button x:Name="Remove" Content="Remove" Margin="0,0,110,10" Click="Remove_Click" Height="49" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="90"/>
    </Grid>
</Window>
